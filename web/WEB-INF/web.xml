<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>base_url</param-name>
        <param-value>http://localhost:8080/Bioinformatica_website/</param-value>
    </context-param>
    <context-param>
        <param-name>mysql_url</param-name>
        <param-value>jdbc:mysql://mysql.bin/Thjkral</param-value>
    </context-param>
    <context-param>
        <param-name>mysql_user</param-name>
        <param-value>thjkral</param-value>
    </context-param>
    <context-param>
        <param-name>mysql_pass</param-name>
        <param-value>eikenboom</param-value>
    </context-param>
    <servlet>
        <servlet-name>AssignmentTechnasium</servlet-name>
        <servlet-class>nl.bioinf.web_servlets.SaveNotesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploaderServlet</servlet-name>
        <servlet-class>nl.bioinf.web_servlets.FileUploaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetNotesServlet</servlet-name>
        <servlet-class>nl.bioinf.web_servlets.GetNotesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignmentAnsweringServlet</servlet-name>
        <url-pattern>/answer.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignmentTechnasium</servlet-name>
        <url-pattern>/makeNotes.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploaderServlet</servlet-name>
        <url-pattern>/uploadFile.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetNotesServlet</servlet-name>
        <url-pattern>/getNotes.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>AssignmentAnsweringServlet</servlet-name>
        <servlet-class>nl.bioinf.web_servlets.AssignmentAnsweringServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>nl.bioinf.web_login_servlets.LoginServlet</servlet-class>
    </servlet>
       <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>nl.bioinf.web_login_servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>nl.bioinf.web_login_servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>
</web-app>
